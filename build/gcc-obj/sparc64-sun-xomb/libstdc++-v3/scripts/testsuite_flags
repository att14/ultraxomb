#!/bin/sh

#
# This script computes the various flags needed to run GNU C++ testsuites
# (compiler specific as well as library specific). 
#
# Written by Benjamin Kosnik <bkoz@redhat.com>
#            Gabriel Dos Reis <gdr@codesourcery.com>
#

# Print a message saying how this script is intended to be invoked
print_usage() {
    cat <<EOF
Usage: 
    testsuite_flags --install-includes
		    --build-includes
		    --build-cxx
		    --build-cc
		    --install-cxx
		    --cxxflags
		    --cxxpchflags
		    --cxxldflags
EOF
}

# Establish configure-generated directory structure.
BUILD_DIR=/home/att14/ultraxomb/build/gcc-obj/sparc64-sun-xomb/libstdc++-v3
SRC_DIR=/home/att14/ultraxomb/build/gcc-4.5.3/libstdc++-v3
PREFIX_DIR=/home/att14/ultraxomb/local
query=$1

case ${query} in
    --install-includes)
      INCLUDES="-I${SRC_DIR}/testsuite/util"
      echo ${INCLUDES}
      ;;
    --build-includes)
      INCLUDES="-nostdinc++ -I/home/att14/ultraxomb/build/gcc-obj/sparc64-sun-xomb/libstdc++-v3/include/sparc64-sun-xomb -I/home/att14/ultraxomb/build/gcc-obj/sparc64-sun-xomb/libstdc++-v3/include -I/home/att14/ultraxomb/build/gcc-4.5.3/libstdc++-v3/libsupc++ 
                -I${SRC_DIR}/include/backward -I${SRC_DIR}/testsuite/util"
      echo ${INCLUDES}
      ;;
    --install-cxx)
      CXX=${PREFIX_DIR}/bin/g++
      echo ${CXX}
      ;;
    --build-cxx)
      CXX_build=" /home/att14/ultraxomb/build/gcc-obj/./gcc/xgcc -shared-libgcc -B/home/att14/ultraxomb/build/gcc-obj/./gcc -nostdinc++ -L/home/att14/ultraxomb/build/gcc-obj/sparc64-sun-xomb/libstdc++-v3/src -L/home/att14/ultraxomb/build/gcc-obj/sparc64-sun-xomb/libstdc++-v3/src/.libs -B/home/att14/ultraxomb/local/sparc64-sun-xomb/bin/ -B/home/att14/ultraxomb/local/sparc64-sun-xomb/lib/ -isystem /home/att14/ultraxomb/local/sparc64-sun-xomb/include -isystem /home/att14/ultraxomb/local/sparc64-sun-xomb/sys-include   "
      CXX=`echo "$CXX_build" | sed 's,gcc/xgcc ,gcc/g++ ,'`
      echo ${CXX}
      ;;
    --build-cc)
      CC_build=" /home/att14/ultraxomb/build/gcc-obj/./gcc/xgcc -B/home/att14/ultraxomb/build/gcc-obj/./gcc/ -B/home/att14/ultraxomb/local/sparc64-sun-xomb/bin/ -B/home/att14/ultraxomb/local/sparc64-sun-xomb/lib/ -isystem /home/att14/ultraxomb/local/sparc64-sun-xomb/include -isystem /home/att14/ultraxomb/local/sparc64-sun-xomb/sys-include   "
      CC="$CC_build"
      echo ${CC}
      ;;
    --cxxflags)
      CXXFLAGS_default="-g -O2 -D_GLIBCXX_ASSERT -fmessage-length=0"
      CXXFLAGS_config="-ffunction-sections -fdata-sections -g -O2 "
      echo ${CXXFLAGS_default} ${CXXFLAGS_config}
      ;;
    --cxxparallelflags)
      CXXFLAGS_parallel="-D_GLIBCXX_PARALLEL -fopenmp
			 -B${BUILD_DIR}/../libgomp 
                         -I${BUILD_DIR}/../libgomp 
			 -L${BUILD_DIR}/../libgomp/.libs -lgomp"
      echo ${CXXFLAGS_parallel}
      ;;
    --cxxpchflags)
      PCHFLAGS="-include bits/stdc++.h"
      echo ${PCHFLAGS}
      ;;
    --cxxldflags)
      SECTIONLDFLAGS=" "
      echo ${SECTIONLDFLAGS}
      ;;
    *)
      print_usage
      ;;
esac

exit 0
